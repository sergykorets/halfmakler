<!-- Modal -->
<div id="myModal_<%= @room.id %>" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title text-center">Оцінити житло</h3>
      </div>
      <div class="modal-body">
        <%= form_for current_user.host_reviews.new do |f| %>
          
          <div class="form-group">
            <%= f.text_area :comment, row: 3, class: "form-control" %>
          </div>
          <div class="form-group text-center">
            <div id="stars_<%= @room.id %>"></div>
          </div>

          <%= f.hidden_field :room_id, value: @room.id %>
          <%#= f.hidden_field :reservation_id, value: reservation.id %>
          <%#= f.hidden_field :guest_id, value: current_user.id %>

          <div class="text-center">
            <%= f.submit "Залишити відгук", class: "btn btn-normal" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
  $('#stars_<%= @room.id %>').raty({
    path: '/assets',
    scoreName: 'host_review[star]',
    score: 1
  });
</script>
