<div class="row">

  <!-- LEFT PANEL -->
  <div class="col-md-8">

    <%= link_to '#', data: { toggle: "modal", target: "#exampleModal" } do %>
      <div class="row">
        <div class="col-md-12">
          <%= image_tag @room.cover_photo(nil), width: "100%" %>
        </div>
      </div>
    <% end %>
    <br>
    <!-- Listing name -->
    <div class="row">
      <div class="col-md-10">
        <h1><%= @room.listing_name %></h1>
        <%= @room.address %>
      </div>
      <div class="col-md-2 text-center">
        <%= image_tag avatar_url(@room.user), class: "img-circle avatar-large" %><br/><br/>
        <%= @room.user.fullname %>
      </div>
    </div>
    <hr/>

    <!-- Room Info -->
    <div class="row text-babu">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
          <i class="fa fa-home fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-user-circle-o fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bed fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bath fa-2x"></i>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-md-3"><%= @room.home_type %></div>
        <div class="col-md-3"><%= pluralize(@room.accommodate, "Кількість кімнат") %></div>
        <div class="col-md-3"><%= pluralize(@room.bed_room, "Спальні місця") %></div>
        <div class="col-md-3"><%= pluralize(@room.bath_room, "Ванні") %></div>
      </div>
    </div>
    <hr/>

    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h3>Деталі житла</h3>
        <p><%= @room.summary %></p>
      </div>
    </div>

    <hr/>

    <div class="row">
      <div class="col-md-12">
        <div class="pull-right"><%= render 'reviews/host_form' %></div>
        <h3>
          <%= pluralize(@guest_reviews.count, "Review") %>
          <span id="average_rating"></span>
        </h3>
        <div class="container">
          <div><%= render "reviews/guest_list" %></div>
        </div>
      </div>
    </div>
    <br/>
    <hr/>

    <!-- GOOGLE MAP -->
    <div class="row">
      <div class="col-md-12" id="map" style="width: 100%; height: 400px"></div>
      <script>
        function initialize() {
          var location = {lat: <%= @room.latitude %>, lng: <%= @room.longitude %>};
          var map = new google.maps.Map(document.getElementById('map'), {
            center: location,
            zoom:14
          });

          var marker = new google.maps.Marker({
            position: location,
            map: map
          });
        }

        google.maps.event.addDomListener(window, 'load', initialize);
      </script>
    </div>
    <hr/>

    <!-- NEAR BY ROOMS -->
    <div class="row">
      <h3>Квартири поблизу</h3>
      <% for room in @room.nearbys(1).max(6).shuffle %>
        <%= link_to room_path(room) do %>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading preview">
                <%= image_tag room.cover_photo(:medium) %>
              </div>
              <div class="panel-body">
                <%= link_to room.listing_name, room %><br/>
                (<%= room.distance.round(2) %> км)
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- RIGHT PANEL -->
  <div class="col-md-4">
    <!-- RESERVATION FORM -->
    <%= render 'reservations/form' %>
    <div class="text-center">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Фотографії</button>
      <!-- Trigger the modal with a button -->
      <button type="button" class="btn btn-normal" data-toggle="modal" data-target="#myModal_<%= @room.id %>">
        Залишити відгук
      </button>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@room.is_tv %>">ТБ</li>
              <li class="<%= 'text-line-through' if !@room.is_kitchen %>">Кухня</li>
              <li class="<%= 'text-line-through' if !@room.is_internet %>">Інтернет</li>
            </ul>
          </div>

          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@room.is_heating %>">Пральна машина</li>
              <li class="<%= 'text-line-through' if !@room.is_air %>">Кондиціонер</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <hr>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <% if @photos.length > 0 %>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
              <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <% @photos.each do |photo| %>
              <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                <%= image_tag photo.image.url() %>
              </div>
              <% end %>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @room.average_rating %>
  });
</script>
