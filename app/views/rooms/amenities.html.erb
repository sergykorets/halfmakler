<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Зручності
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row form-group">
              <div class="col-md-6">
                <%= f.check_box :is_tv %> ТБ
              </div>
              <div class="col-md-6">
                <%= f.check_box :is_internet %> Інтернет
              </div>
            </div>

            <div class="row form-group">
              <div class="col-md-6">
                <%= f.check_box :is_heating %> Пральна машина
              </div>
              <div class="col-md-6">
                <%= f.check_box :is_air %> Кондиціонер
              </div>
            </div>
            <br/><br/>

            <div class="text-center">
              <%= f.submit "Зберегти", class: "btn btn-form" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
