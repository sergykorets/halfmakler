<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <!-- <li class="sidebar-item"><%#= link_to "Мої квартири", rooms_path, class: "sidebar-link active" %></li> -->
      <!-- <li class="sidebar-item"><%#= link_to "Мої черги на показ", your_reservations_path, class: "sidebar-link" %></li> -->
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Мої квартири
      </div>
      <div class="panel-body">

        <% @rooms.each do |room| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag room.cover_photo(:thumb) %>
            </div>
            <div class="col-md-7">
              <h4><%= room.listing_name %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to listing_room_path(room), class: "btn btn-form" do %>
                <i class="fa fa-pencil fa-2x"></i>
              <% end %>
              <%= link_to room_path(room), method: :delete, class: "btn btn-form" do %>
                <i class="fa fa-trash fa-2x"></i>
              <% end %>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>
