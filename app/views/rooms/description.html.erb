<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Деталі житла
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label>Заголовок</label>
                <%= f.text_field :listing_name, placeholder: "Заголовок оголошення", class: "form-control", required: true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>Детальний опис</label>
                <%= f.text_area :summary, rows: 5, placeholder: "Детальний опис житла", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "Зберегти", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
