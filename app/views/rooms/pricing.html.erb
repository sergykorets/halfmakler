<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Ціна
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label>Ціна (грн)</label>
                <%= f.text_field :price, placeholder: "Наприклад: 5000", class: "form-control", autofocus: true, required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "Зберегти", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
