<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Мої квартири", rooms_path, class: "sidebar-link" %></li>
      <!-- <li class="sidebar-item"><%#= link_to "Мої черги на показ", your_reservations_path, class: "sidebar-link active" %></li> -->
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <!-- <div class="panel-heading">
        Мої черги на показ
      </div> -->
      <div class="panel-body">

        <% @reservations.each do |reservation| %>
          <div class="row">
            <div class="col-md-2">
              <%= link_to room_path(reservation.room) do %>
                <%= image_tag reservation.room.cover_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-10">
              <%= link_to reservation.room.listing_name, room_path(reservation.room) %><br/><br/>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>
